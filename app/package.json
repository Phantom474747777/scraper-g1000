    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.scraperg1000.app",
    "productName": "Scraper G1000",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "files": [
      "**/*",
      "!**/*.py",
      "!**/__pycache__"
    ]
